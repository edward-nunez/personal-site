{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "This is my personal site source for edwardnunez.io, a blog and portfolio of my latest activity.",
  "author": "Edward Nunez <mail@edwardnunez.io>",
  "private": true,
  "workspaces": [
    "server/",
    "client/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/edward-nunez/personal-site"
  },
  "scripts": {
    "dev:client": "npm --workspace=client run start",
    "dev:server": "npm --workspace=server run start",
    "lint:client": "npm --workspace=client run lint",
    "lint:server": "npm --workspace=server run lint",
    "build": "npm --workspace=client run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm --workspace=client run test",
    "test:server": "echo \"Error: no test specified\" && exit 1",
    "format:client": "npm --workspace=client run format",
    "format:server": "echo \"Error: no format specified\" && exit 1"
  }
}
