{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "This is my personal site source for edwardnunez.io, a blog and portfolio of my latest activity.",
  "author": "Edward Nunez <mail@edwardnunez.io>",
  "private": true,
  "workspaces": [
    "server/",
    "client/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/edward-nunez/personal-site"
  },
  "scripts": {
    "dev:client": "npm --workspace=client run start",
    "dev:server": "npm --workspace=server run start",
    "build": "npm --workspace=client run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm --workspace=client run test",
    "test:server": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
